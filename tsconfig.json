{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "es6",
    "noImplicitAny": true,
    "importHelpers": true,
    "types": [
      "node",
      "svelte",
      "jest"
    ],
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2019"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
